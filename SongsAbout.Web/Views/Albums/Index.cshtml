@model IEnumerable<SongsAbout.Web.Models.Album>

@{
    ViewBag.Title = "Albums";
}

<h2>Albums</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Tracks Saved
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.AlbumCover != null)
                {
                    <img src="@item.AlbumCover.Url" width="64" , height="64" alt="@item.AlbumCover.AltText" />
                }
                else
                {
                    <img src="" width="64" , height="64" alt="img-@item.Name" />
                }

            </td>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.AlbumId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tracks.Count);
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AlbumId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AlbumId })
            </td>
        </tr>
    }

</table>
